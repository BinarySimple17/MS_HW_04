apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: users-service-ingress
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /health/ # REWRITE
    nginx.ingress.kubernetes.io/use-regex: "true"
spec:
  ingressClassName: nginx #класс nginx ingress
  rules:
    - host: arch.homework #хост arch.homework
      http:
        paths:
          - path: /otusapp/([^/]+)/health/?$
            pathType: ImplementationSpecific
            backend:
              service:
                name: health-service
                port:
                  number: 80

          # - path: /health
          #   pathType: Prefix
          - path: /health/?$
            pathType: ImplementationSpecific
            backend:
              service:
                name: health-service
                port:
                  number: 80
